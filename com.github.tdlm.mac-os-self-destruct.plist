<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
	<dict>
		<key>Label</key>
		<string>com.github.tdlm.mac-os-self-destruct</string>

		<key>ProgramArguments</key>
		<array>
			<string>{SCRIPT_INSTALL_PATH}</string>
			<string>--run</string>
		</array>
        
        <key>OnDemand</key>
        <false/>

		<key>Nice</key>
		<integer>1</integer>

		<key>StartInterval</key>
		<integer>60</integer>

		<key>RunAtLoad</key>
		<true/>

        <key>StandardErrorPath</key>
        <string>/tmp/mac-os-self-destruct.err</string>
        
        <key>StandardOutPath</key>
        <string>/tmp/mac-os-self-destruct.out</string>
	</dict>
</plist>
